fetch('menu.json')
//que hace? Esta linea inicia la carga del archivo menu.json es una funcionde JavaScript que facilita la realizacion de solicitudes de red , como obtener de una archivo o un endpoint de API 
//como funciona? fetch devuelve una promesas que cuando se resuelve , tendra acceso a la respuesta de la solicitud .Esta respuesta no es directamente los datos en formato JSON, si no un objeto de respuesta
.then(Response=> Response.json())
//que hace? Esta linea toma el objeto de respuesta en un objeto de respuesta en un obtenido de fetch y utiliza el metodo .json) para convertir el cuerpo de la respuesta esta en formato JSON).
//Como funciona? el metodo .jsom() tambien devuelve una promesa la cual se resuelve con el contenido del cuerpo en formato JSON.
then(data=>{
    const menuContainer = document.getElementById  ('menuContainer');
    //que hace? Aqui se procesan los datos JSON ya convertidos.Se obtiene una referencia al contenidos del menu en el HTML mediante el getElemenById('menu-container'), y luego se itera sobre los elementos(categorias)del menu.
data.items.forEach(category=>{
     const categoryTitle=document.createElement('h2');
//que hace? aqui se crea un elemento h2, se asigna el nombre de la categoria como su contenido de texto , y luego se a√±ade este titulo al contenedor del menu/.
categoryTitle.textContent= category.category;
menuContainer.appendChild{categoryTitle}; const table=document.createElement ('table');
//que hace? se crea un elemento table para cada categoria.Ademas,se prepara el encabezado(tableHead) con las columnas pertinentes. tableBodyse inicializa vacio y se llenara con los elementos de la categoria.
const tablehead= `<tr><th>foto</ th><th>Description</th><th>Precio</th></tr`;
let tableBody = '';
//como funciuona? Para cada categoria en los datos, se realizan varios pasos: Crear un titulo para la categoria (se crea un elemento <h2> para el titulo de la categoria , se establece su contenido de texto al nombre de la categoria (category.category), luego se agrega al conductor del menu).
// crear una tabla para los elementos de esas categorias: se genera una tabla por cada categoria (primero se define el encabezado de la tabla <th>foto</th><th>Description</th<th>Precio</th>).

category.items.forEach (item =>{
   tableBody +=`1<tr>
               <td><img scr="${item.image} alt="${item.name}
               <td>${item.name} - "${item.description}"</td>
               <td>${item.precio}</td>
            </tr>`;
       })
});
})
